<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirthdayMainFragment">

    <TextView
        android:id="@+id/text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Today is:"
        app:layout_constraintEnd_toStartOf="@+id/text_currentDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Jan 1, 2021"
        app:layout_constraintBottom_toBottomOf="@+id/text_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_today"
        app:layout_constraintTop_toTopOf="@+id/text_today" />

    <TextView
        android:id="@+id/text_nextBdayDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Next Friend's Birthday is:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_today" />

    <TextView
        android:id="@+id/text_nextBdayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jan 10, 2021"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nextBdayDisplay" />

    <TextView
        android:id="@+id/text_nextBdayNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="- Name1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nextBdayDate" />

    <AutoCompleteTextView
        android:id="@+id/input_searchFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/landing_searchFriend"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_right15"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/guide_vertical_left15"
        app:layout_constraintTop_toBottomOf="@+id/text_nextBdayNameList" />

    <ImageButton
        android:id="@+id/btn_searchFriend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@+id/input_searchFriend"
        app:layout_constraintStart_toStartOf="@+id/guide_vertical_right15"
        app:layout_constraintTop_toTopOf="@+id/input_searchFriend"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btn_addBday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add_birthday"
        app:layout_constraintBottom_toTopOf="@+id/btn_calendar"
        app:layout_constraintEnd_toStartOf="@+id/btn_editBday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_editBday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit_birthday"
        app:layout_constraintBottom_toBottomOf="@+id/btn_addBday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_addBday"
        app:layout_constraintTop_toTopOf="@+id/btn_addBday" />

    <ImageButton
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_calendar_birthday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_addBday"
        app:layout_constraintStart_toStartOf="@+id/btn_addBday" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calendar"
        app:layout_constraintEnd_toEndOf="@+id/btn_editBday"
        app:layout_constraintStart_toStartOf="@+id/btn_editBday"
        app:layout_constraintTop_toTopOf="@+id/btn_calendar" />

    <View
        android:id="@+id/view_horizontalLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_calendar"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_right15"
        app:layout_constraintStart_toStartOf="@+id/guide_vertical_left15"
        app:layout_constraintTop_toBottomOf="@+id/btn_addBday" />

    <View
        android:id="@+id/view_verticalLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn_calendar"
        app:layout_constraintEnd_toStartOf="@+id/btn_editBday"
        app:layout_constraintStart_toEndOf="@+id/btn_addBday"
        app:layout_constraintTop_toTopOf="@+id/btn_addBday" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vertical_left15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vertical_right15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/btn_logout_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>