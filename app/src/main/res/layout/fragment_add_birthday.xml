<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.birthday.add.AddBirthdayFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/input_addBday_contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_addBday_contactAddr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="@+id/input_addBday_contactName"
        app:layout_constraintStart_toStartOf="@+id/input_addBday_contactName"
        app:layout_constraintTop_toBottomOf="@+id/input_addBday_contactDate" />

    <Button
        android:id="@+id/btn_addBday_addContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_addBday_contactAddr" />

    <EditText
        android:id="@+id/input_addBday_contactDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Birthdate"
        app:layout_constraintEnd_toEndOf="@+id/input_addBday_contactName"
        app:layout_constraintStart_toStartOf="@+id/input_addBday_contactName"
        app:layout_constraintTop_toBottomOf="@+id/input_addBday_contactName" />

</androidx.constraintlayout.widget.ConstraintLayout>